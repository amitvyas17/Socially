<%- include('../includes/start.ejs') %>
<link href="/css/add-friend.css" rel="stylesheet">

<main>
  <% if(users.length > 0){ %>
    <div class="centerDiv">
      <div class="row">
        <% users.forEach(user => { %>
          <div class="col-md-6">
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex align-items-start userName">
                  <img src="<%= user.imagePath %>" class="rounded-image" width="40px">
                  <h5 class="card-title ms-2 mt-2" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;" title="<%= user.firstName %> <%= user.lastName %>"><%= user.firstName %> <%= user.lastName %></h5>
                </div>
                <div class="d-flex add-friend-div">
                <p class="card-text"><%= user.description %></p>
                <form class="friendRequestForm" method="post" action="/add-friend">
                  <input type="hidden" name="userId" value="<%= user._id %>">
                  <button type="submit" class="friendRequestBtn borderless-btn"><i class="fa-solid fa-user-plus"></i></button>
                </form>
              </div>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  <% } else { %>
    <h3>You are already friends with everyone</h3>
  <% } %>
</main>

<%- include('../includes/end.ejs') %>
