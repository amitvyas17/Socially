     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
     <title>Login Page</title>
 </head>
 <body>


    <main>
      <% if(messages && messages.length > 0) { %>
        <script>
          alert('<%= messages %>');
        </script>
      <% } %>
        <div class="d-flex">
          <div class="login" >

        



        
          </div>
        <div class="login-parent">
          <div class="login-form">
            <img  id="login-image" src="image/verticalLogo.png" width="220px" height="200px">

             <form action="/login" method="post">
              <div class=" position-relative">
                <input type="email" name="email" class="form-control login-input" id="exampleInputEmail1" placeholder="Email"  required>
              </div>

              <div class=" position-relative mt-2">
                <input type="password" name="password" class="form-control login-input" id="exampleInputPassword1" placeholder="Password"  required>
              </div>

              <div class=" mt-3 mb-3"> 
                <button type="submit" class="btn btn-primary login-btn">Login</button>
              </div>
                <p class="ms-2 a-new-forget">Don't Have an account?<a class="signup-btn" href="/signup"> Create a new Account</a></p>
                <p class="ms-2 a-new-forget">Forget Password?<a class="signup-btn" href="/reset"> Reset password now!</a></p>
              
              </form>    
            </div>
        </div>
     
  </div>
    </main>
